<style>
  @import '../../styles/form-animations.css';
  
  .modern-step {
    position: absolute;
    width: 100%;
    opacity: 0;
    visibility: hidden;
    transform: translateX(50px) scale(0.98);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }
  
  .modern-step.active {
    position: relative;
    opacity: 1;
    visibility: visible;
    transform: translateX(0) scale(1);
    pointer-events: auto;
  }
  
  /* Step Header */
  .step-header {
    margin-bottom: 2rem;
    text-align: center;
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.1s;
    animation-fill-mode: both;
  }
  
  .step-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
    line-height: 1.3;
  }
  
  .step-description {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 32rem;
    margin: 0 auto;
  }
  
  /* Step Content */
  .step-content {
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.2s;
    animation-fill-mode: both;
  }
  
  /* Staggered animations for form fields */
  .modern-step.active .form-field:nth-child(1) {
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.1s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .form-field:nth-child(2) {
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.2s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .form-field:nth-child(3) {
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.3s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .form-field:nth-child(4) {
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.4s;
    animation-fill-mode: both;
  }
  
  /* Benefits Section */
  .step-benefits {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.5s;
    animation-fill-mode: both;
  }
  
  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .benefit-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: rgba(0, 242, 169, 0.05);
    border: 1px solid rgba(0, 242, 169, 0.1);
    border-radius: 8px;
    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: all 0.3s ease;
    cursor: default;
  }
  
  .benefit-item:hover {
    background: rgba(0, 242, 169, 0.08);
    border-color: rgba(0, 242, 169, 0.2);
    transform: translateX(4px);
    color: var(--text-primary);
  }
  
  .benefit-icon {
    font-size: 1.125rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    animation: iconBounce 2s ease-in-out infinite;
    animation-delay: calc(var(--i, 0) * 0.2s);
  }
  
  .benefit-item:nth-child(1) .benefit-icon {
    --i: 0;
  }
  
  .benefit-item:nth-child(2) .benefit-icon {
    --i: 1;
  }
  
  /* Step transition states */
  .modern-step.exiting {
    animation: stepExit 0.3s ease-out forwards;
  }
  
  .modern-step.entering {
    animation: stepEnter 0.4s ease-out forwards;
  }
  
  @keyframes stepExit {
    from {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
    to {
      opacity: 0;
      transform: translateX(-50px) scale(0.98);
    }
  }
  
  @keyframes stepEnter {
    from {
      opacity: 0;
      transform: translateX(50px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }
  
  /* Form Actions animations */
  .modern-step.active .form-actions {
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.6s;
    animation-fill-mode: both;
  }
  
  /* Challenges grid specific animation */
  .modern-step.active .challenges-grid {
    animation: fadeInSequence 0.6s ease-out;
    animation-delay: 0.3s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .challenges-grid .form-field {
    animation: none;
  }
  
  .modern-step.active .challenges-grid .form-field:nth-child(1) {
    animation: scaleIn 0.4s ease-out;
    animation-delay: 0.4s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .challenges-grid .form-field:nth-child(2) {
    animation: scaleIn 0.4s ease-out;
    animation-delay: 0.5s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .challenges-grid .form-field:nth-child(3) {
    animation: scaleIn 0.4s ease-out;
    animation-delay: 0.6s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .challenges-grid .form-field:nth-child(4) {
    animation: scaleIn 0.4s ease-out;
    animation-delay: 0.7s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .challenges-grid .form-field:nth-child(5) {
    animation: scaleIn 0.4s ease-out;
    animation-delay: 0.8s;
    animation-fill-mode: both;
  }
  
  .modern-step.active .challenges-grid .form-field:nth-child(6) {
    animation: scaleIn 0.4s ease-out;
    animation-delay: 0.9s;
    animation-fill-mode: both;
  }
  
  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  /* Mobile Optimizations */
  @media (max-width: 640px) {
    .step-header {
      margin-bottom: 1.5rem;
    }
    
    .step-title {
      font-size: 1.5rem;
    }
    
    .step-description {
      font-size: 0.9375rem;
    }
    
    .benefits-list {
      gap: 0.5rem;
    }
    
    .benefit-item {
      padding: 0.625rem 0.875rem;
      font-size: 0.8125rem;
    }
  }
  
  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .modern-step,
    .step-header,
    .step-content,
    .step-benefits,
    .benefit-item,
    .benefit-icon,
    .form-field,
    .form-actions,
    .challenges-grid {
      animation: none;
      transition: opacity 0.3s ease;
    }
    
    .modern-step.active {
      transform: none;
    }
    
    .benefit-item:hover {
      transform: none;
    }
  }
</style>