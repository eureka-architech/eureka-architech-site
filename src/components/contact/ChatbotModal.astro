<style>
  .chatbot-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .chatbot-modal.hidden {
    display: none;
  }
  
  .chatbot-modal.active {
    display: flex;
  }

  .chatbot-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(15, 15, 35, 0.95);
    backdrop-filter: blur(10px);
    animation: fadeIn 0.3s ease;
  }

  .chatbot-container {
    position: relative;
    width: 100%;
    max-width: 500px;
    height: min(700px, 85vh);
    background: var(--slate-900);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.5),
      0 0 100px rgba(0, 212, 170, 0.1),
      inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    animation: slideUp 0.4s cubic-bezier(0.25, 0.1, 0.25, 1);
    overflow: hidden;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Header */
  .chatbot-header {
    padding: 1.5rem;
    background: var(--slate-800);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .chatbot-header-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .chatbot-avatar {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--emerald-500), var(--sapphire-500));
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: 0 4px 12px rgba(0, 212, 170, 0.3);
  }

  .chatbot-avatar svg {
    width: 28px;
    height: 28px;
    color: white;
  }

  .status-indicator {
    position: absolute;
    bottom: -2px;
    right: -2px;
    width: 14px;
    height: 14px;
    background: var(--emerald-400);
    border: 2px solid var(--slate-800);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .chatbot-header h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: white;
    margin: 0;
  }

  .status-text {
    font-size: 0.875rem;
    color: var(--slate-400);
    margin: 0.25rem 0 0 0;
  }

  .chatbot-close {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    border: none;
    background: rgba(255, 255, 255, 0.05);
    color: var(--slate-400);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .chatbot-close:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    transform: scale(1.05);
  }

  /* Progress Bar */
  .chatbot-progress {
    padding: 1rem 1.5rem;
    background: rgba(0, 212, 170, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .progress-bar {
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 0.75rem;
  }

  .progress-fill {
    height: 100%;
    width: 25%;
    background: linear-gradient(90deg, var(--emerald-500), var(--sapphire-500));
    border-radius: 2px;
    transition: width 0.5s ease;
  }

  .progress-steps {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
  }

  .step {
    color: var(--slate-500);
    transition: color 0.3s ease;
  }

  .step.active {
    color: var(--emerald-400);
    font-weight: 600;
  }

  /* Messages */
  .chatbot-messages {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .message {
    display: flex;
    gap: 0.75rem;
    animation: messageSlide 0.4s ease;
  }

  .message.user {
    flex-direction: row-reverse;
  }

  .message-avatar {
    width: 32px;
    height: 32px;
    background: rgba(0, 212, 170, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .message-avatar svg {
    width: 18px;
    height: 18px;
    color: var(--emerald-400);
  }

  .message.user .message-avatar {
    background: rgba(99, 102, 241, 0.1);
  }

  .message.user .message-avatar svg {
    color: var(--sapphire-400);
  }

  .message-content {
    max-width: 80%;
    background: var(--slate-800);
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .message.user .message-content {
    background: linear-gradient(135deg, var(--sapphire-600), var(--sapphire-500));
    color: white;
    border: none;
  }

  .message-content p {
    margin: 0;
    line-height: 1.5;
  }

  .message-content p + p {
    margin-top: 0.5rem;
  }

  /* Quick Actions */
  .chatbot-quick-actions {
    padding: 1rem 1.5rem;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    background: rgba(0, 0, 0, 0.2);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .quick-action {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--slate-800);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: var(--slate-300);
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .quick-action:hover {
    background: var(--slate-700);
    border-color: var(--emerald-500);
    color: white;
    transform: translateY(-2px);
  }

  .action-icon {
    font-size: 1.125rem;
  }

  /* Input Area */
  .chatbot-input-area {
    padding: 1.5rem;
    background: var(--slate-800);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .input-wrapper {
    position: relative;
    background: var(--slate-900);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .input-wrapper:focus-within {
    border-color: var(--emerald-500);
    box-shadow: 0 0 0 3px rgba(0, 212, 170, 0.1);
  }

  .chatbot-input {
    width: 100%;
    padding: 0.875rem 1rem;
    padding-right: 100px;
    background: transparent;
    border: none;
    color: white;
    font-size: 0.875rem;
    resize: none;
    outline: none;
    min-height: 44px;
    max-height: 120px;
  }

  .chatbot-input::placeholder {
    color: var(--slate-500);
  }

  .input-actions {
    position: absolute;
    right: 0.5rem;
    bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .char-count {
    font-size: 0.75rem;
    color: var(--slate-500);
  }

  .send-button {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    border: none;
    background: linear-gradient(135deg, var(--emerald-500), var(--sapphire-500));
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .send-button:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(0, 212, 170, 0.3);
  }

  .send-button:active {
    transform: scale(0.95);
  }

  /* Typing Indicator */
  .typing-indicator {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem 0;
  }

  .typing-indicator span {
    width: 8px;
    height: 8px;
    background: var(--emerald-400);
    border-radius: 50%;
    animation: typingDot 1.4s ease-in-out infinite;
  }

  .typing-indicator span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .typing-indicator span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes typingDot {
    0%, 60%, 100% {
      transform: translateY(0);
      opacity: 0.5;
    }
    30% {
      transform: translateY(-10px);
      opacity: 1;
    }
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes messageSlide {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Scrollbar */
  .chatbot-messages::-webkit-scrollbar {
    width: 6px;
  }

  .chatbot-messages::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
  }

  .chatbot-messages::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
  }

  .chatbot-messages::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .chatbot-container {
      max-width: 100%;
      height: 100vh;
      border-radius: 0;
    }

    .chatbot-quick-actions {
      grid-template-columns: 1fr;
    }
  }
</style>