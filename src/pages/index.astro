---
import OptimizedLayout from '../layouts/OptimizedLayout.astro';
import TripleGuaranteeSection from '../components/TripleGuaranteeSection.astro';
---

<OptimizedLayout 
  title="EurekaArchiTech - Transformación Digital Empresarial | Consultoría Estratégica"
  description="Empoderar a las organizaciones en su transformación digital mediante soluciones innovadoras, liderazgo estratégico y excelencia operacional que garantizan resultados medibles y sostenibles."
  type="website"
>
  <!-- Hero Section Enhanced -->
  <section class="home-hero" style="min-height: 100vh; contain: layout style;">
    <div class="home-hero__background" style="position: absolute; inset: 0; overflow: hidden; will-change: transform;">
      <div class="home-hero__orb home-hero__orb--primary" style="transform: translate3d(0, 0, 0);"></div>
      <div class="home-hero__orb home-hero__orb--secondary" style="transform: translate3d(0, 0, 0);"></div>
      <div class="home-hero__grid-pattern" style="opacity: 0.3; will-change: opacity;"></div>
    </div>
    
    <div class="container relative z-10">
      <div class="home-hero__content">
        <!-- Badge -->
        <div class="home-hero__badge staggered-reveal" style="min-height: 40px; contain: layout;">
          <div class="home-hero__badge-icon" style="width: 20px; height: 20px; flex-shrink: 0;">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" width="16" height="16" aria-hidden="true">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="home-hero__badge-text">Transformación Digital Empresarial</span>
        </div>
        
        <!-- Main Title -->
        <h1 class="home-hero__title staggered-reveal" style="min-height: 200px; contain: layout;">
          Transformando el 
          <span class="home-hero__title-accent">Futuro Digital</span>
          de tu Empresa
        </h1>
        
        <!-- Description -->
        <p class="home-hero__description staggered-reveal" style="min-height: 100px; contain: layout;">
          Empoderar a las organizaciones en su transformación digital mediante soluciones innovadoras, 
          liderazgo estratégico y excelencia operacional que garantizan resultados medibles y sostenibles.
        </p>
        
        <!-- CTA Section -->
        <div class="home-hero__cta staggered-reveal" style="min-height: 120px; contain: layout;">
          <a href="/contacto" class="btn btn-primary btn-lg hover-lift" style="min-width: 280px;">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Diagnóstico Digital Gratuito
          </a>
          <a href="/servicios" class="btn btn-secondary btn-lg" style="min-width: 220px;">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Explorar Servicios
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="home-hero__trust staggered-reveal" style="min-height: 120px; contain: layout;">
          <div class="home-hero__trust-item" style="min-height: 100px;">
            <div class="home-hero__trust-icon" style="width: 40px; height: 40px; flex-shrink: 0;">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div class="home-hero__trust-content">
              <span class="home-hero__trust-value">40+</span>
              <span class="home-hero__trust-label">Especialistas</span>
            </div>
          </div>
          
          <div class="home-hero__trust-item" style="min-height: 100px;">
            <div class="home-hero__trust-icon" style="width: 40px; height: 40px; flex-shrink: 0;">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="home-hero__trust-content">
              <span class="home-hero__trust-value">95%</span>
              <span class="home-hero__trust-label">Éxito Proyectos</span>
            </div>
          </div>
          
          <div class="home-hero__trust-item" style="min-height: 100px;">
            <div class="home-hero__trust-icon" style="width: 40px; height: 40px; flex-shrink: 0;">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="home-hero__trust-content">
              <span class="home-hero__trust-value">48h</span>
              <span class="home-hero__trust-label">Activación</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problema + Solución Section - Refined -->
  <section class="problem-solution-section">
    <div class="container">
      <div class="problem-solution-section__header">
        <div class="problem-solution-section__badge">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Desafíos Digitales Actuales</span>
        </div>
        
        <h2 class="problem-solution-section__title">
          ¿Tu empresa se está quedando <span class="problem-solution-section__title-accent">atrás digitalmente?</span>
        </h2>
        
        <p class="problem-solution-section__subtitle">
          Identificamos y resolvemos los desafíos más comunes que enfrentan las organizaciones en su transformación digital.
        </p>
      </div>
      
      <div class="problem-solution-section__content">
        <!-- Problemas -->
        <div class="problem-solution-section__problems">
          <h3 class="problem-solution-section__section-title">Desafíos Comunes</h3>
          <div class="problems-list">
            <div class="problem-item">
              <div class="problem-item__icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="problem-item__content">
                <h4 class="problem-item__title">Procesos Manuales Ineficientes</h4>
                <p class="problem-item__description">Tareas repetitivas que consumen tiempo y recursos valiosos</p>
              </div>
            </div>
            
            <div class="problem-item">
              <div class="problem-item__icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div class="problem-item__content">
                <h4 class="problem-item__title">Competencia Más Ágil</h4>
                <p class="problem-item__description">Competidores con mejores herramientas ganando terreno en tu mercado</p>
              </div>
            </div>
            
            <div class="problem-item">
              <div class="problem-item__icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
              <div class="problem-item__content">
                <h4 class="problem-item__title">Expectativas de Cliente</h4>
                <p class="problem-item__description">Clientes esperando experiencias digitales que no puedes ofrecer</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Solución -->
        <div class="problem-solution-section__solution">
          <div class="solution-card">
            <div class="solution-card__header">
              <div class="solution-card__icon">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="solution-card__title">Metodología <span class="text-accent">EUREKA</span></h3>
            </div>
            
            <p class="solution-card__description">
              Transformación digital estructurada que convierte tus desafíos en ventajas competitivas sostenibles.
            </p>
            
            <div class="eureka-steps">
              <div class="eureka-step">
                <div class="eureka-step__marker">E</div>
                <span class="eureka-step__label">Evaluación integral</span>
              </div>
              <div class="eureka-step">
                <div class="eureka-step__marker">U</div>
                <span class="eureka-step__label">Unificación de procesos</span>
              </div>
              <div class="eureka-step">
                <div class="eureka-step__marker">R</div>
                <span class="eureka-step__label">Rediseño estratégico</span>
              </div>
              <div class="eureka-step">
                <div class="eureka-step__marker">E</div>
                <span class="eureka-step__label">Ejecución controlada</span>
              </div>
              <div class="eureka-step">
                <div class="eureka-step__marker">K</div>
                <span class="eureka-step__label">Knowledge transfer</span>
              </div>
              <div class="eureka-step">
                <div class="eureka-step__marker">A</div>
                <span class="eureka-step__label">Autonomía garantizada</span>
              </div>
            </div>
            
            <div class="solution-card__cta">
              <a href="/nosotros" class="btn btn-secondary btn-base">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Conocer Metodología Completa
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Success Stories Section - Enhanced -->
  <section class="success-stories-section">
    <div class="success-stories__background">
      <div class="success-stories__orb success-stories__orb--primary"></div>
      <div class="success-stories__orb success-stories__orb--secondary"></div>
      <div class="success-stories__grid-pattern"></div>
    </div>
    
    <div class="container relative z-10">
      <!-- Enhanced Header -->
      <div class="success-stories__header animate-fade-in" style="contain: layout; min-height: 200px;">
        <div class="success-stories__badge" style="min-height: 40px;">
          <div class="success-stories__badge-icon" style="width: 20px; height: 20px; flex-shrink: 0;">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" width="20" height="20" aria-hidden="true">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="success-stories__badge-text">Casos de Éxito Comprobado</span>
        </div>
        
        <h2 class="success-stories__title animate-slide-up" style="animation-delay: 0.2s">
          Transformación Digital que 
          <span class="success-stories__title-accent">Transforma Resultados</span>
        </h2>
        
        <p class="success-stories__subtitle animate-slide-up" style="animation-delay: 0.3s">
          Descubre cómo nuestros clientes han logrado resultados excepcionales con nuestras soluciones de transformación digital
        </p>
        
        <!-- Success Metrics Overview -->
        <div class="success-stories__overview animate-scale-in" style="animation-delay: 0.4s; min-height: 120px; contain: layout;">
          <div class="success-stories__overview-stat hover-lift" style="min-height: 100px; min-width: 120px;">
            <div class="success-stories__overview-number">40+</div>
            <div class="success-stories__overview-label">Especialistas</div>
          </div>
          <div class="success-stories__overview-stat hover-lift" style="min-height: 100px; min-width: 120px;">
            <div class="success-stories__overview-number">95%</div>
            <div class="success-stories__overview-label">Éxito de Proyectos</div>
          </div>
          <div class="success-stories__overview-stat hover-lift" style="min-height: 100px; min-width: 120px;">
            <div class="success-stories__overview-number">2024</div>
            <div class="success-stories__overview-label">Fundación</div>
          </div>
        </div>
      </div>
      
      <!-- Featured Case Study -->
      <div class="success-stories__featured smart-fade-in" style="contain: layout; min-height: 600px;">
        <!-- Company Header -->
        <div class="success-stories__company-header">
          <div class="success-stories__company-info">
            <div class="success-stories__company-logo" style="width: 80px; height: 80px; contain: layout;">
              <img 
                src="/clients/l_hergon_02.svg" 
                alt="Hergon Systems Solution" 
                class="w-full h-full object-contain"
                loading="lazy"
                width="80"
                height="80"
                decoding="async"
                style="aspect-ratio: 1; object-fit: contain;"
              />
            </div>
            <div class="success-stories__company-details">
              <h3 class="success-stories__company-name">Hergon Systems Solution</h3>
              <p class="success-stories__company-industry">Servicios Financieros • Tecnología Contable</p>
              <div class="success-stories__company-meta">
                <span class="success-stories__project-status">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Proyecto Activo
                </span>
                <span class="success-stories__project-timeline">2024-2025</span>
              </div>
            </div>
          </div>
          
          <div class="success-stories__company-actions">
            <a 
              href="https://sishergon.com.mx/" 
              target="_blank" 
              rel="noopener noreferrer"
              class="btn btn-secondary btn-base hover-lift"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Visitar Sitio Web
            </a>
          </div>
        </div>

        <!-- Main Content Grid -->
        <div class="success-stories__content">
          <!-- Metrics and Timeline -->
          <div class="success-stories__main">
            <!-- Key Metrics -->
            <div class="success-stories__metrics-container">
              <h4 class="success-stories__section-title">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                Resultados Cuantificables
              </h4>
              
              <div class="success-stories__metrics-grid">
                <div class="success-stories__metric hover-lift staggered-reveal">
                  <div class="success-stories__metric-header">
                    <div class="success-stories__metric-value success-stories__metric-value--accent">
                      40%
                    </div>
                    <div class="success-stories__metric-trend success-stories__metric-trend--up">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="success-stories__metric-label">Reducción tiempo procesamiento</div>
                  <div class="success-stories__metric-description">Optimización de procesos core</div>
                </div>
                
                <div class="success-stories__metric hover-lift staggered-reveal">
                  <div class="success-stories__metric-header">
                    <div class="success-stories__metric-value success-stories__metric-value--success">
                      0
                    </div>
                    <div class="success-stories__metric-trend success-stories__metric-trend--neutral">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="success-stories__metric-label">Incidentes críticos post-implementación</div>
                  <div class="success-stories__metric-description">Estabilidad operacional total</div>
                </div>
                
                <div class="success-stories__metric hover-lift staggered-reveal">
                  <div class="success-stories__metric-header">
                    <div class="success-stories__metric-value success-stories__metric-value--accent">
                      100%
                    </div>
                    <div class="success-stories__metric-trend success-stories__metric-trend--up">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="success-stories__metric-label">Cumplimiento normativo CONSAR</div>
                  <div class="success-stories__metric-description">Certificación regulatoria completa</div>
                </div>
                
                <div class="success-stories__metric hover-lift staggered-reveal">
                  <div class="success-stories__metric-header">
                    <div class="success-stories__metric-value success-stories__metric-value--warning">
                      ISO
                    </div>
                    <div class="success-stories__metric-trend success-stories__metric-trend--neutral">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="success-stories__metric-label">Preparación Certificación 27001</div>
                  <div class="success-stories__metric-description">Estándares de seguridad internacional</div>
                </div>
